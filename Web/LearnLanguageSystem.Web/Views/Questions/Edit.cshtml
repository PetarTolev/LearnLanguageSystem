@model QuestionEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post">
    <div class="question-card">
        <h3 id="title">Question 1</h3>

        <div class="input-group">
            <label class="input-group-text">Question Content</label>
            <input type="text" class="form-control" asp-for="Content" />
        </div>
        <hr />

        <div class="input-group">
            <label class="input-group-text">Answer 1</label>
            <input type="text" class="form-control" asp-for="Answers[0].Content" />
            <div class="input-group-text">
                <input type="checkbox" asp-for="Answers[0].IsRight" />
            </div>
        </div>

        <div class="input-group">
            <label class="input-group-text">Answer 2</label>
            <input type="text" class="form-control" asp-for="Answers[1].Content" />
            <div class="input-group-text">
                <input type="checkbox" asp-for="Answers[1].IsRight" />
            </div>
        </div>

        <div class="input-group">
            <label class="input-group-text">Answer 3</label>
            <input type="text" class="form-control" asp-for="Answers[2].Content" />
            <div class="input-group-text">
                <input type="checkbox" asp-for="Answers[2].IsRight" />
            </div>
        </div>

        <div class="input-group">
            <label class="input-group-text">Answer 4</label>
            <input type="text" class="form-control" asp-for="Answers[3].Content" />
            <div class="input-group-text">
                <input type="checkbox" asp-for="Answers[3].IsRight" />
            </div>
        </div>
        <br />
    </div>

    <button class="btn btn-primary" asp-controller="Questions" asp-action="Edit">Save</button>
</form>