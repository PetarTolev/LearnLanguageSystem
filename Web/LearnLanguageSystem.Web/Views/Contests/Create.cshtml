@model ContestNameInputModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="height: 500px">
    <div class="d-flex flex-column align-items-center justify-content-center w-50 h-50" style="border: 2px solid #dee2e6; border-radius: 8px;">
        <h3>Create Contest</h3>

        <form class="d-flex flex-column align-items-center" asp-controller="Contests" asp-action="Create" method="post">
            <input class="form-control" autofocus type="text" asp-for="@Model.Name" placeholder="Enter contest name..."/>
            <span class="text-danger" asp-validation-for="Name"></span>
            <br />
            <button class="btn btn-primary">Create</button>
        </form>
    </div>
</div>