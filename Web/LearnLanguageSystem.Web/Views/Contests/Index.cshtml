@using Microsoft.CodeAnalysis
@model LearnLanguageSystem.Web.ViewModels.Contests.ContestViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<form asp-controller="Contests" asp-action="Index" method="post">
    @foreach (var question in Model.Questions)
    {
        <h2>@question.Content</h2>

        <ul class="list-group">
            @foreach (var answer in question.Answers)
            {
                <li>
                    <input type="radio" id="answer" value="@answer.IsRight">
                    <label for="answer">@answer.Content</label><br>
                </li>
            }
        </ul>
        <br/>
    }
</form>