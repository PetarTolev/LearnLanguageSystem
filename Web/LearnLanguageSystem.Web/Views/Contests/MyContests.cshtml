@model IEnumerable<ContestViewModel>

@{
    ViewData["Title"] = "My Contests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Contests</h1>
<div class="list-group">
    @foreach (var contest in Model)
    {
        <div class="d-inline-flex mb-2">
            <div class="list-group-item d-flex justify-content-between align-items-center flex-grow-1">
                <a asp-controller="Contests" asp-action="Edit" asp-route-contestId="@contest.Id">@contest.Name</a>
                <span class="badge badge-primary badge-pill">@contest.Questions.Count</span>
            </div>
            <a class="btn btn-danger ml-3 px-5" asp-controller="Contests" asp-action="Delete" asp-route-contestId="@contest.Id">Delete</a>
            <a class="btn btn-success ml-3 px-5" asp-controller="Contests" asp-action="Open" asp-route-contestId="@contest.Id">Open</a>
        </div>
        //todo: add creation time
    }
</div>
