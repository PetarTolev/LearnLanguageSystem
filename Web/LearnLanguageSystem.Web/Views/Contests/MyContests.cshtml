@model ContestsListViewModel

@{
    ViewData["Title"] = "My Contests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 align="center">My Contests</h1>

<div class="list-group">
    @foreach (var contest in Model.Contests)
    {
        <div class="d-inline-flex mb-2" id="Container_@contest.Id">
            <div class="list-group-item d-flex justify-content-between align-items-center flex-grow-1">
                <a asp-controller="Contests" asp-action="Edit" asp-route-id="@contest.Id">@contest.Name</a>
                <span class="badge badge-primary badge-pill">@contest.Questions.Count</span>
            </div>

            <button type="button" class="btn btn-danger ml-3 px-5" data-toggle="modal" data-target="#exampleModal" onclick="deleteContest('@contest.Id')">Delete</button>

            @if (contest.IsOpen)
            {
                <a class="btn btn-primary ml-3 px-5" asp-controller="Contests" asp-action="Close" asp-route-id="@contest.Id">Close</a>

                <span>@contest.AccessCode</span>
            }
            else
            {
                <a class="btn btn-outline-primary ml-3 px-5" asp-controller="Contests" asp-action="Open" asp-route-id="@contest.Id">Open</a>
            }
        </div>

        <input type="hidden" id="contestForDeleteId" value="" />

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete your contest?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                        <a href="#" class="btn btn-danger" onclick="deleteConfirm()">Yes</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div style="@(Model.Contests.Any() ? "display:none !important" : "")" class="alert alert-danger d-flex justify-content-between" role="alert" id="noContestsNotification">
    <span>No added contests...</span>
    <a asp-controller="Contests" asp-action="Create">Add contests</a>
</div>

@section Scripts {
    <script>
        function deleteContest(contestId) {
            $('#contestForDeleteId').val(contestId);
        }

        function deleteConfirm() {
            var contestId = $('#contestForDeleteId').val();
            var token = $("input[name=__RequestVerificationToken]").val();

            $.ajax({
                url: `/Contests/Delete/?id=${contestId}`,
                contentType: "application/json; charset=utf-8",
                headers: { 'X-CSRF-TOKEN': token },
                success: function () {
                    $(`#Container_${contestId}`).remove();
                    $('#exampleModal').modal('hide');

                    var contestsCount = $("div[id^='Container_']").length;

                    if (contestsCount < 1) {
                        $('#noContestsNotification').show();
                    }
                }
            });
        }
    </script>
}