@model ContestsListViewModel

@{
    ViewData["Title"] = "My Contests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 align="center">My Contests</h1>

<div style="@(Model.Contests.Any() ? "display:none !important" : "")" class="alert alert-danger d-flex justify-content-between" role="alert" id="emptyNotification">
    <span>No added contests...</span>
    <a asp-controller="Contests" asp-action="Create">Add contests</a>
</div>

<div class="list-group">
    @foreach (var contest in Model.Contests)
    {
        <div class="d-inline-flex mb-2" id="Container_@contest.Id">
            <div class="list-group-item d-flex justify-content-between align-items-center flex-grow-1">
                <a asp-controller="Contests" asp-action="Edit" asp-route-id="@contest.Id">@contest.Name</a>
                <span class="badge badge-primary badge-pill">@contest.Questions.Count</span>
            </div>

            <button type="button" class="btn btn-danger ml-3 px-5" data-toggle="modal" data-target="#deleteModal" onclick="del('contestForDeleteId', '@contest.Id')">Delete</button>

            @if (contest.IsOpen)
            {
                <a class="btn btn-primary ml-3 px-5" asp-controller="Contests" asp-action="Close" asp-route-id="@contest.Id">Close</a>

                <span>@contest.AccessCode</span>
            }
            else
            {
                <a class="btn btn-outline-primary ml-3 px-5" asp-controller="Contests" asp-action="Open" asp-route-id="@contest.Id">Open</a>
            }
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Are you sure you want to delete your contest?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                        <a href="#" class="btn btn-danger" onclick="deleteConfirm('contestForDeleteId', '/Contests/Delete/')">Yes</a>
                    </div>
                </div>
            </div>
        </div>
    }

    <input type="hidden" id="contestForDeleteId" value="" />
</div>