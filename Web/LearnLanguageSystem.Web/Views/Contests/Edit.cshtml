@model ContestViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

@if (this.TempData["Notification"] != null)
{
    <div class="alert alert-info">
        @this.TempData["Notification"]
    </div>
}

<form asp-controller="Contests" asp-action="Edit" method="post">
    <input class="form-control w-25" type="text" asp-for="@Model.Name" placeholder="Enter new contest name..." />
    <span class="text-danger w-100" asp-validation-for="Name"></span>
    <br />
    <button class="btn btn-primary mt-2">Edit Name</button>
</form>

<div style="@(Model.Questions.Any() ? "display:none !important" : "")" class="alert alert-danger" role="alert" id="emptyNotification">
    No added questions...
</div>

<div class="list-group w-50">
    @if (Model.Questions.Any())
    {
        foreach (var question in Model.Questions.OrderBy(x => x.Content))
        {
            <div class="list-group-item d-flex flex-row justify-content-between align-items-center mb-2" id="Container_@question.Id">
                <p>@question.Content</p>

                <div>
                    <a class="btn btn-primary" asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id">Edit</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" onclick="del('questionForDeleteId', '@question.Id')">Delete</button>
                </div>
            </div>

            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Are you sure you want to delete this question?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            <a href="#" class="btn btn-danger" onclick="deleteConfirm('questionForDeleteId', '/Questions/Delete/')">Yes</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <input type="hidden" id="questionForDeleteId" value="" />
</div>


<form style="@(Model.Questions.Count >= 10 ? "display:none !important" : "")" asp-controller="Questions" asp-action="Add" method="get" id="questionsAddForm">
    <input type="hidden" name="contestId" value="@Model.Id" />
    <input class="form-control w-25" type="number" name="questionsCount" value="" />
    <button class="btn btn-primary" type="submit">Add questions</button>
</form>

@section Scripts {
    <script>
        function showAddButton() {
            let count = $("div[id^='Container_']").length;

            if (count < 10) {
                $('#questionsAddForm').show();
            }
        }
    </script>
}