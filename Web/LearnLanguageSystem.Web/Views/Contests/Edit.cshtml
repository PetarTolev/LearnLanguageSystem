@model ContestViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form asp-controller="Contests" asp-action="Edit" method="post">
    <input class="form-control w-25" type="text" asp-for="@Model.Name" placeholder="Enter new contest name..." />
    <span class="text-danger w-100" asp-validation-for="Name"></span>
    <br />
    <button class="btn btn-primary mt-2">Edit Name</button>
</form>

@if (!Model.Questions.Any())
{
    <div class="alert alert-danger" role="alert">
        No added questions...
    </div>
}

<div class="list-group w-50">
    @if (Model.Questions.Any())
    {
        foreach (var question in Model.Questions.OrderBy(x => x.Content))
        {
            <div class="list-group-item d-flex flex-row justify-content-between align-items-center mb-2">
                <p>@question.Content</p>

                <div>
                    <a class="btn btn-primary" asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id">Edit</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Delete</button>
                </div>
            </div>

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this question?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            <a type="button" class="btn btn-danger" asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id">Yes</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<a class="btn btn-primary" asp-controller="Questions" asp-action="Add" asp-route-id="@Model.Id">Add questions</a>