@model ContestViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

@if (!Model.Questions.Any())
{
    <div class="alert alert-dark" role="alert">
        No added questions...
    </div>
}

<form class="form-inline" method="post">
    <input class="form-control w-25" type="text" asp-for="Name" placeholder="Enter contest name..." />

    <button class="btn btn-primary ml-3" asp-controller="Contests" asp-action="ChangeName" asp-route-id="@Model.Id">Edit Name</button>
</form>

<div class="list-group w-50">
    @if (Model.Questions.Any())
    {
        foreach (var question in Model.Questions)
        {
            <div class="list-group-item d-flex flex-row justify-content-between align-items-center mb-2">
                <p>@question.Content</p>

                <div>
                    <a class="btn btn-primary" asp-controller="Questions" asp-action="Edit" asp-route-id="@question.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Questions" asp-action="Delete" asp-route-id="@question.Id">Delete</a>
                </div>
            </div>
        }
    }
</div>

<a class="btn btn-primary" asp-controller="Questions" asp-action="Add" asp-route-id="@Model.Id">Add questions</a>