@model ContestJoinInputModel

@{
    ViewData["Title"] = "Join";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Join</h1>

@if (this.TempData["Notification"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @this.TempData["Notification"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form method="post">
    <input class="form-control w-25" type="text" asp-controller="Contests" asp-action="Join" asp-for="@Model.Key" />
    <button class="btn btn-primary mt-3">Join</button>
</form>