@using LearnLanguageSystem.Data.Models
@using Microsoft.AspNetCore.Identity
@model RoomIndexViewModel
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = await this.UserManager.GetUserAsync(this.User);
}

<h1>Index</h1>

<div class="d-flex flex-column justify-content-center align-items-center">
    <h1>Contest room</h1>

    <h2>@Model.AccessCode</h2>

    <div class="table-wrapper-scroll-y my-custom-scrollbar px-1 py-1" style="display: block; position: relative; height: 500px; width: 600px; overflow: auto; border: 2px solid lightgray; border-radius: 8px">

        <table class="table table-hover mb-0 text-center">
            <thead class="thead-light ">
                <tr>
                    <th scope="col">Avatar</th>
                    <th scope="col">Username</th>
                    @if (Model.ContestCreatorId == user.Id)
                    {
                        <th scope="col">Kick Player</th>
                    }
                    else
                    {
                        <th scope="col">Leave</th>
                    }
                </tr>
            </thead>

            <tbody>
                @foreach (var userModel in Model.Users)
                {
                    <tr>
                        <td><img src="@(userModel.AvatarUrl ?? @"/img/icon-avatar-default.png")" class="rounded-circle" alt="Avatar" style="width: 40px; height: 40px;"></td>
                        <td>@userModel.Username</td>
                        @if (Model.ContestCreatorId == user.Id)
                        {
                            <td><a class="btn btn-danger" asp-area="" asp-controller="Rooms" asp-action="Kick" asp-route-userId="@userModel.Id" asp-route-roomId="@Model.Id">Kick</a></td>
                        }
                        else if (userModel.Id == user.Id)
                        {
                            <td><a class="btn btn-danger" asp-area="" asp-controller="Rooms" asp-action="Kick" asp-route-userId="@userModel.Id" asp-route-roomId="@Model.Id">Leave</a></td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <button class="btn btn-success btn-lg px-5">Start</button>
    </div>
</div>